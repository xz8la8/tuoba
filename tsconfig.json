{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "paths": {
      "tiangong-shared": ["./packages/tiangong-shared/src/index.ts"],
      "tiangong-operator": ["./packages/tiangong-operator/src/index.ts"],
      "tiantong-dashboard": ["./packages/tiantong-dashboard/src/index.ts"]
    }
  },
  "include": ["packages/**/*.tsx", "packages/**/*.ts"],
  "exclude": ["node_modules", "lib", "es"]
}
